$if null polls
  <section .hero .is-primary>
    <div .hero-body>
      <div .container>
        <h1 .title.>
          There are no polls here...
        <h2 .subtitle>
          <a href="@{CreatePollR}" .button .is-large .is-inverted .is-primary>Get Started
$else
  $forall Entity _ poll@(Poll title _ _ _ friendlyUrl) <- polls
    <div .tile :isActive today poll:.is-primary>#{title}